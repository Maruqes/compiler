

func remove_item_by_value(dq arr, dq length, dq value){
	if length == 0 { return 0; }
	dq i = 0;
	while i < length {
		if arr[i] == value {
			// shift remaining items left
			dq j = i;
			while j < (length - 1) {
				arr[j] = arr[j + 1];
				j++;
			}
			return length - 1; // new length
		}
		i++;
	}
	return length; // unchanged length
}